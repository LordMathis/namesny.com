{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
      "standard",
      "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },    
    "parser": "babel-eslint",
    "plugins": [
        "babel",
        "react"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}